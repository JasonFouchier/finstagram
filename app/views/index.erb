<% if current_user %>
  <div class="new-post">
    <a href="/post/new" class="button">New Post</a>
  </div>
<% end %>

  <div class="login-info">
    <% if current_user %>
      <%= current_user.username %>
      <a href="/logout">Logout</a>
    
    <% end %>
